#include <stdio.h>

int main(void) {
  int valor;

  printf("Digite o valor desejesado para conversão:\t");
  scanf("%d",&valor);

  int valorDecimetro = valor * 10;
  int valorCentimetro= valor * 100;
  int valorMilimetro = valor * 1000;

  printf("\nO valor em metro é: %d m\n", valor);
  printf("O valor em decimetro é: %d dm\n", valorDecimetro);
  printf("O valor em centrimetro é: %d cm\n", valorCentimetro);
  printf("O valor em milimetro é: %d mm\n", valorMilimetro);
  
  return 0;
}
