#include <stdio.h>

int main(void) {
    float nota1, nota2, media;
 
  while(nota1!=50){
    printf("\nInforme a primeira nota do aluno:\t");
    scanf("%f",&nota1);
  if(nota1==50){
    printf("Opção invalida");
    break;} 
    
    printf("Informe a segunda nota do aluno:\t");
    scanf("%f",&nota2);
  
  if(nota1<0 || nota1>10 || nota2<0 || nota2>10){
    printf("\nNota invalida\n");
    printf("Por favor, digite novamente as notas corretamente\n");
    }
  else{
    media= (nota1 + nota2)/2;
    printf("\nA media do aluno é: %.2f\n",media);
      }
  }
  
  return 0;
}
